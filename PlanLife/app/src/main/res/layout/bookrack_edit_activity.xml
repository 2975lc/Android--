<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/bookrack_edit_occupy"
        android:layout_alignParentTop="true"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%"/>
    <androidx.percentlayout.widget.PercentRelativeLayout
        android:id="@+id/bookrack_edit_layout"
        android:background="@drawable/bill_record_edit_layout"
        android:layout_below="@+id/bookrack_edit_occupy"
        android:layout_centerHorizontal="true"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="60%"
        app:layout_widthPercent="80%">
        <TextView
            android:id="@+id/bookrack_edit_name_text"
            android:text="书名："
            android:textSize="35dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_alignParentTop="true"
            app:layout_heightPercent="10%"/>
        <EditText
            android:id="@+id/bookrack_edit_name_edit"
            android:hint="书名"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/bookrack_edit_name_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <TextView
            android:id="@+id/bookrack_edit_author_text"
            android:text="作者："
            android:textSize="35dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_below="@+id/bookrack_edit_name_edit"
            app:layout_heightPercent="10%"/>
        <EditText
            android:id="@+id/bookrack_edit_author_edit"
            android:hint="作者"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_below="@+id/bookrack_edit_name_text"
            android:layout_toRightOf="@+id/bookrack_edit_author_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <TextView
            android:id="@+id/bookrack_edit_cheek_text"
            android:text="金额："
            android:textSize="35dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_below="@+id/bookrack_edit_author_text"
            app:layout_heightPercent="10%"/>
        <EditText
            android:id="@+id/bookrack_edit_cheek_edit"
            android:hint="金额"
            android:textSize="25dp"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:layout_below="@+id/bookrack_edit_author_text"
            android:layout_toRightOf="@+id/bookrack_edit_cheek_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <GridView
            android:id="@+id/bill_record_edit_gridview"
            android:layout_below="@+id/bookrack_edit_cheek_text"
            android:focusable="true"
            android:numColumns="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_widthPercent="100%"/>
    </androidx.percentlayout.widget.PercentRelativeLayout>
    <Button
        android:id="@+id/bookrack_edit_edit"
        android:text="编辑"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_below="@+id/bookrack_edit_layout"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/bookrack_edit_delete"
        android:text="删除"
        android:textSize="30dp"
        android:textColor="#FF0000"
        android:gravity="center"
        android:layout_below="@+id/bookrack_edit_edit"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.percentlayout.widget.PercentRelativeLayout>