<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/bill_budget_recycler_data_occupy"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_alignParentTop="true"/>
    <TextView
        android:id="@+id/bill_budget_recycler_data_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="种类"
        android:textSize="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>
    <TextView
        android:id="@+id/bill_budget_recycler_data_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="month"
        android:textSize="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"/>
    <TextView
        android:id="@+id/bill_budget_recycler_data_surplus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="剩余"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/bill_budget_recycler_data_type"/>
    <TextView
        android:id="@+id/bill_budget_recycler_data_spending"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="spending"
        android:textSize="20dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/bill_budget_recycler_data_surplus"/>
    <TextView
        android:id="@+id/bill_budget_recycler_data_budget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="budget"
        android:textSize="20dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/bill_budget_recycler_data_surplus"/>
</androidx.percentlayout.widget.PercentRelativeLayout>