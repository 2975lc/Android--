<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/programme_occupy"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="3%"
        app:layout_widthPercent="100%"/>
    <androidx.percentlayout.widget.PercentRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/programme_title"
        android:layout_below="@+id/programme_occupy"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="17%"
        app:layout_widthPercent="100%">
        <TextView
            android:id="@+id/programme_title_unfinished_backlog"
            android:text="未完成的代办："
            android:textSize="35dp"
            android:textColor="#ED5A65"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="62%"
            app:layout_widthPercent="100%"/>
        <TextView
            android:id="@+id/programme_title_habit_time"
            android:text="日常习惯总完成时间："
            android:textSize="20dp"
            android:textColor="#2E317C"
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="38%"
            app:layout_widthPercent="100%"/>
    </androidx.percentlayout.widget.PercentRelativeLayout>
    <RadioGroup
        android:id="@+id/programme_RGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/programme_title"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/programme_habit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="日常习惯"
            android:textSize="25dp"
            android:textColor="@drawable/selector_text"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/programme_backlog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="待办事项"
            android:textSize="25dp"
            android:textColor="@drawable/selector_text"/>
    </RadioGroup>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/programme_VPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/programme_RGroup" />
</androidx.percentlayout.widget.PercentRelativeLayout>