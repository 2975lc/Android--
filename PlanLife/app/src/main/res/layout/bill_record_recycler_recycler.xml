<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/bill_record_recycler_left"
        android:layout_alignParentLeft="true"
        android:gravity="right|center_horizontal"
        android:layout_width="0dp"
        android:layout_height="20dp"
        app:layout_widthPercent="40%"/>
    <ImageView
        android:id="@+id/bill_record_recycler_point"
        android:src="@drawable/icon_bill_record_recycler_point"
        android:layout_centerHorizontal="true"
        android:layout_width="0dp"
        android:layout_height="20dp"
        app:layout_widthPercent="20%"/>
    <TextView
        android:id="@+id/bill_record_recycler_right"
        android:layout_alignParentRight="true"
        android:gravity="left|center_horizontal"
        android:layout_width="0dp"
        android:layout_height="20dp"
        app:layout_widthPercent="40%"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bill_record_recycler_recycler"
        android:divider="@null"
        android:listSelector="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bill_record_recycler_point"/>

</androidx.percentlayout.widget.PercentRelativeLayout>